<UserControl
    x:Class="i_ConVerificationSystem.Forms.Settings.VerificationItem.TGConditions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:i_ConVerificationSystem.Forms.Settings.VerificationItem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel x:Name="DP">
            <WrapPanel x:Name="wp" DockPanel.Dock="Top">
                <Button
                    x:Name="DecisionButton"
                    Width="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="DecisionButton_Click"
                    Content="確定" />
                <Button
                    x:Name="CancelButton"
                    Width="75"
                    VerticalAlignment="Top"
                    Click="CancelButton_Click"
                    Content="キャンセル" />
            </WrapPanel>
            <TabControl x:Name="tcAlignments" />
        </DockPanel>
    </Grid>
</UserControl>
